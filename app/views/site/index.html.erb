<div class="grid grid-cols-12 gap-12">
  <div class="col-span-4">
    <h2 class="font-bold text-xl mb-8">Registration</h2>
    <hr />
    <div id="login-form" class="mt-4 pt-4"></div>
  </div>
  <div class="col-span-7">
    <h2 class="font-bold text-xl mb-8">New users</h2>
    <hr />
    <table class="mt-8 table-auto w-full">
      <tr>
        <thead>
          <th class="text-left font-bold">Email</th>
          <th class="text-left font-bold">Date</th>
        </thead>
        <tbody id="new-users">
          <%= render @users %>
        </tbody>
      </tr>
    </table>
  </div>
</div>
